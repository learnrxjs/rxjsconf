---
import "../global.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/rxjs-conf-logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} • RxJS Conf</title>

    <meta name="keywords" content="rxjs,conference">
    <meta name="description" content="Онлайн конференция по RxJS">
  </head>
  <body>
    <slot />
    <div id="dialog-container"></div>
  </body>
</html>
